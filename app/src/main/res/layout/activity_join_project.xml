<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_join_project"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hifive.hifive.JoinProject">

    <Button
        android:text="@string/cancel_start_project_button_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cancel_button_wfp"
        android:onClick="goToMain"/>

    <Button
        android:text="@string/join_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/join_button"
        android:onClick="goToWaitForStart"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/project_title_jp"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:text="@string/participant_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/participant_3_name_jp"
        android:layout_alignTop="@+id/participant_3_picture_jp"
        android:layout_toEndOf="@+id/participant_3_picture_jp"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/participant_3_rating_jp"
        android:isIndicator="true"
        android:rating="4"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_below="@+id/participant_3_name_jp"
        android:layout_toEndOf="@+id/participant_3_picture_jp" />

    <TextView
        android:text="@string/participant_3_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/participant_3_name_jp"
        android:layout_toEndOf="@+id/participant_3_rating_jp"
        android:id="@+id/participant_3_num_ratings_jp" />

    <TextView
        android:text="@string/participant_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/participant_2_name_jp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_alignTop="@+id/participant_2_picture_jp"
        android:layout_toEndOf="@+id/participant_2_picture_jp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/participant_2_rating_jp"
        android:rating="5"
        android:isIndicator="true"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_below="@+id/participant_2_name_jp"
        android:layout_toEndOf="@+id/participant_2_picture_jp" />

    <TextView
        android:text="@string/participant_2_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/participant_2_name_jp"
        android:layout_toEndOf="@+id/participant_2_rating_jp"
        android:id="@+id/participant_2_num_ratings_jp" />

    <TextView
        android:text="@string/participant_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/participant_1_name_jp"
        android:layout_alignTop="@+id/participant_1_picture_jp"
        android:layout_toEndOf="@+id/participant_1_picture_jp"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/participant_1_rating_jp"
        android:rating="1"
        android:isIndicator="true"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_below="@+id/participant_1_name_jp"
        android:layout_toEndOf="@+id/participant_1_picture_jp" />

    <TextView
        android:text="@string/participant_1_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/participant_1_rating_jp"
        android:layout_toEndOf="@+id/participant_1_rating_jp"
        android:id="@+id/participant_1_num_ratings" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/participant_0_rating_jp"
        android:isIndicator="true"
        android:rating="3"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_below="@+id/participant_0_name_jp"
        android:layout_toEndOf="@+id/participant_0_picture_jp" />

    <TextView
        android:text="@string/participant_0_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/participant_0_name_jp"
        android:layout_toEndOf="@+id/participant_0_rating_jp"
        android:id="@+id/participant_0_num_ratings_jp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/harkinian"
        android:id="@+id/participant_0_picture_jp"
        android:layout_below="@+id/project_title_jp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ganon"
        android:id="@+id/participant_1_picture_jp"
        android:layout_below="@+id/participant_0_picture_jp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/servo"
        android:id="@+id/participant_2_picture_jp"
        android:layout_below="@+id/participant_1_picture_jp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/freddi"
        android:id="@+id/participant_3_picture_jp"
        android:layout_below="@+id/participant_2_picture_jp"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/participant_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/participant_0_name_jp"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_below="@+id/project_title_jp"
        android:layout_toEndOf="@+id/participant_0_picture_jp" />

</RelativeLayout>
